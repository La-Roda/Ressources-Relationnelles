pipeline {
    agent {
        docker {
            image:'node:6-alpine'
            args: '-p 3000:3000'
        }
    }
    
    stages {
        stage('Build') {
            steps {
                dir('ressources-relationnelles/view/') { // Changer vers le répertoire souhaité
                    sh 'npm install' // Installer les dépendances front-end si nécessaire
                    sh 'npm run build' // Builder la partie front de votre projet
                }
            } 
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Test back') {
            steps {
                echo 'Testing..'
            }
        }
        stage('test front') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}